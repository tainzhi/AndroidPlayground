<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopCarAnimationActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopcarRv"
        tools:listitem="@layout/item_shopcar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/shopcarIv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/shopcar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        app:layout_constraintTop_toTopOf="@id/shopcarIv"
        app:layout_constraintEnd_toEndOf="@id/shopcarIv"
        tools:text="99"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/shape_circle_red"
        android:id="@+id/shopcarCountTv"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>