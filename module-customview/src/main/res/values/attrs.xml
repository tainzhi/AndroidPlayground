<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CirclePercentView">
        <attr name="radius" format="dimension"/>
        <attr name="stripWidth" format="dimension"/>
        <attr name="percent" format="integer"/>
        <attr name="smallColor" format="color"/>
        <attr name="bigColor" format="color"/>
        <attr name="centerTextSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LevelProgressBar">
        <attr name="progressBarHeight" format="dimension"/>
        <attr name="progressBarWidth" format="dimension"/>
        <attr name="progressBarBackground" format="color"/>
        <attr name="firstLevelIcon" format="reference"/>
        <attr name="secondLevelIcon" format="reference"/>
        <attr name="thirdLevelIcon" format="reference"/>
        <attr name="fourthLevelIcon" format="reference"/>
        <attr name="fifthLevelIcon" format="reference"/>
        <attr name="levelIconWidth" format="dimension|reference"/>
        <attr name="progressBarProgressDrawable" format="reference"/>
        <attr name="indicatorDrawable" format="reference"/>
        <attr name="indicatorWidth" format="dimension|reference"/>
        <attr name="indicatorHeight" format="dimension|reference"/>
<!--        indicator距离progressBar中心点的垂直距离-->
        <attr name="indicatorPosition" format="dimension|reference"/>
        <attr name="textSize" format="dimension|reference"/>
<!--        text距离progresBar中心点的垂直距离-->
        <attr name="textPosition" format="dimension|reference" />
        <attr name="textColor" format="color"/>
<!--        每个等级的积分-->
        <attr name="pointTextSize" format="dimension|reference"/>
        <attr name="pointTextPosition" format="dimension|reference"/>
        <attr name="pointTextColor" format="color"/>
<!--        底部indicator-->
        <attr name="bottomIndicatorDrawable" format="reference"/>
        <attr name="bottomIndicatorWidth" format="dimension|reference"/>
        <attr name="bottomIndicatorHeight" format="dimension|reference"/>
        <attr name="bottomIndicatorPosition" format="dimension|reference"/>
    </declare-styleable>
</resources>
